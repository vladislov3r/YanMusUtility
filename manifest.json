{
  "manifest_version": 3,
  "name": "Yandex Music Controller",
  "version": "1.0",
  "description": "Управляйте треками на Яндекс.Музыке в фоновом режиме.",
  "permissions": ["tabs", "scripting", "contextMenus"],
  "host_permissions": ["https://next.music.yandex.ru/*"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "volume_down": {
      "description": "Уменьшить громкость",
      "suggested_key": {
        "default": "Ctrl+Shift+Down"
      }
    },
    "next_track": {
      "description": "Следующий трек",
      "suggested_key": {
        "default": "Ctrl+Shift+Right"
      }
    },
    "previous_track": {
      "description": "Предыдущий трек",
      "suggested_key": {
        "default": "Ctrl+Shift+Left"
      }
    },
    "volume_up": {
      "description": "Увеличить громкость",
      "suggested_key": {
        "default": "Ctrl+Shift+Up"
      }
    }
  }
}
